<?php

namespace TC\UserBundle\Controller;

use Symfony\Component\HttpFoundation\RedirectResponse;
use FOS\UserBundle\Controller\RegistrationController as BaseController;

class RegistrationController extends BaseController
{
    public function registerAction()
    {
        $em = $this->container->get('doctrine')->getEntityManager();
        
        $form = $this->container->get('fos_user.registration.form');
        $formHandler = $this->container->get('tc_user.registration.form.handler');
        $confirmationEnabled = $this->container->getParameter('fos_user.registration.confirmation.enabled');

        $process = $formHandler->process($confirmationEnabled);
        if ($process) {
            $user = $form->getData();

            $this->container->get('logger')->info(
                sprintf('New user registration: %s', $user)
            );
            
            
            /**
             * @todo Create RegisteredEvent and have the relations assignations in the event listener 
             */
            $enrollments = $em->getRepository('TCCoreBundle:Enrollment')->findByEmail($user->getEmail());
            foreach($enrollments as $key => $enrollment){
                $enrollment->getRelation()->setClient($user->getWorkspace());
                $em->persist($enrollment);
                $em->persist($enrollment->getRelation());
            }            
            $em->flush();
            
           /**
            * @todo Set Email confirmation
            */
            if ($confirmationEnabled) {
                $this->container->get('session')->set('fos_user_send_confirmation_email/email', $user->getEmail());
                $route = 'fos_user_registration_check_email';
            }else {
                //$this->authenticateUser($user);
                $route = 'fos_user_registration_confirmed';
            }

            $this->setFlash('fos_user_success', 'registration.flash.user_created');
            $url = $this->container->get('router')->generate($route);

            return new RedirectResponse($url);
        }

        return $this->container->get('templating')->renderResponse('TCUserBundle:Registration:register.html.'.$this->getEngine(), array(
            'form' => $form->createView(),
        ));
    }
}

?>
