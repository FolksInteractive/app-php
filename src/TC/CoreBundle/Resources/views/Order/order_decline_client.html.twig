{% extends 'TCCoreBundle::skeleton_client.html.twig' %}

{% use "TCCoreBundle:Relation:relation_menu_client.html.twig" %}

{% block body_class %} 
{{parent()}} order-decline
{% endblock %}

{% block main_before %} 
{% set attr = {} %}
{{form_start(form, {'attr':attr})}}
{% endblock %}

{% block main_after %}
{{form_widget(form._token)}}
{{form_end(form, {'render_rest':false})}}
{% endblock %}

{% block toolbar %}
<div class="tc-breadcrumb pull-left">
    {% set menu = knp_menu_get('TCCoreBundle:ClientMenuBuilder:ordersMenu',[],{"relation": relation, "order":order}) %}
    {{ knp_menu_render(menu, {'template': 'TCCoreBundle::breadcrumbs.html.twig'}) }}
</div>

<div class="tc-controls toolbar pull-right">
    <div class="btn-group">  
        <a class="btn-default btn-lg btn" 
           href="{{path('client_order_show' , {'idOrder':order.id, 'idRelation': relation.id})}}">
            Show Order
        </a>
    </div>
</div>
{% endblock %}

{% block sheet %}
    <div class="tc-heading-section">
        <h2>{{order.heading}}</h2>
    </div>

    <div class="tc-form-section"> 
        {{form_row(form.why,{'label':'It is important to keep your service provider informed of this refusal.'})}}
        {{form_row(form.other,{'label':'You can also leave your service provider a message.'})}}
     </div>
            
    <div class="tc-confirm-section">
        <p class="tc-confirm-caption">
            Are you sure you want to cancel this Request for Proposal ?
        </p>
            
        <div class="tc-confirm-btns">
            
            <a class="btn btn-danger"
               href="{{path('client_relation_orders', {'idRelation':relation.id,'idOrder':order.id})}}">
                No
            </a>
            
            <button type="submit" class="btn btn-default">
                Yes, I am sure
            </button>
            
        </div>
    </div> 
{% endblock %}