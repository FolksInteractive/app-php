{% block menu %}

{% include "TCCoreBundle::global_dropdown.html.twig" %}

<div class="tc-return-section">
    <ul class="tc-menu nav">
        <li>
            <a href="{{path('client_overview', {'idRelation' : relation.id})}}">
                <i class="glyphicon glyphicon-arrow-left glyphicon-white"></i>
                <span class="dashboard">Go Back</span>
            </a>
        </li>
    </ul>
</div>

<div class="tc-contact-section">
    {#<div class="nav-header">Your Vendor</div> #}
    <div class="contact">
        <div class="avatar">
            <img src="{{avatar(relation.client.user) | imagine_filter('80_thumb')}}">
        </div>
        <div class="infos">
            <div class="name">{{relation.client.getFullName() | default(relation.client)}}</div>
            <div class="role">Client</div>
        </div>
    </div>
</div>

{% set relationMenu = knp_menu_get('TCCoreBundle:ClientMenuBuilder:relationMenu',[],{'relation':relation, 'user':app.user}) %}
<div class="tc-menu-section">
    {#<div class="settings"><i class="icon-settings"></i></div>#}
    
    {{ knp_menu_render(relationMenu) }}
</div>
{% endblock%}