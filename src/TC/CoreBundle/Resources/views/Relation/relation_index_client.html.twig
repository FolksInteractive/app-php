{% extends 'TCCoreBundle::skeleton_client.html.twig' %}

{% block body_class -%}{{ parent() }} client-relations {% endblock %}

{% block toolbar %}
<div class="tc-breadcrumb pull-left">
    <ul class="breadcrumb">        
        <li class="active">    
            <a href="{{path('client_relation')}}">
                <i class="icon-relations-dark-large"></i> Service Providers
            </a>
        </li>    
    </ul>
</div>

<div class="tc-controls pull-right">
    <a href="{{path('client_relation_new')}}" class="btn btn-primary btn-lg">
        <span class="icon-add-user"></span>
        Add New
    </a>
</div>
{% endblock %}

{% block sheet %}
<div class="tc-relations-section">

    <legend>Active Service Providers</legend>
    
    <div class="tc-relations-boxes">
    {% for relation in relations %} 
                    
        <div class="col-sm-6 col-md-4 col-lg-3">
            
            <div class="thumbnail">
                <div class="hover">
                    <a href="{{path('client_relation_orders',{'idRelation': relation.id})}}" class="realhover"></a>
                    <a class="btn btn-success btn-lg view-activities" role="button"
                           href="{{path('client_relation_orders',{'idRelation': relation.id})}}">
                            View Activities
                    </a>
                </div>
                <img class="img-rounded" src="{{vich_uploader_asset(relation.vendor.user, 'avatar') | imagine_filter('140_thumb')}}" />
                <div class="caption">
                    
                    {% if relation.vendor.getFirstName() and relation.vendor.getLastName() %}
                        <h3>{{relation.vendor.getFirstName()}} <br /> 
                            <small>{{relation.vendor.getLastName()}}</small>
                        </h3>
                    {% else %}
                        </h4>{{relation.vendor.getEmail()}}</h4>
                    {% endif %}
                    
                    <!--<div class="toolbar">
                        <a class="btn btn-primary" role="button"
                           href="{{path('client_relation_orders',{'idRelation': relation.id})}}">
                            <span class="icon-check-small"></span>
                            View Activities
                        </a>
                    </div>-->
                </div>
            </div>
        </div>
            
    {% endfor %}
    </div>

    {# Not for BETA
    <legend>Inactive Business Relationships <span>(0)</span></legend>
    #}
</div>
{% endblock %}