{% extends 'TCCoreBundle:Client:skeleton.html.twig' %}

{% block body_class -%}{{ parent() }} client-relations {% endblock %}

{% block toolbar %}
<div class="tc-breadcrumb pull-left">
</div>

<div class="tc-controls pull-right">
    <a href="{{path('client_relation_new')}}" class="btn-primary btn">
        <i class="icon-discussion icon-white"></i>
        Open a new relationship
    </a>
</div>
{% endblock %}

{% block sheet %}
<div class="tc-relations-section">
    <legend>
        Relationships
        <span class="badge">{{ relations|length }}</span>
    </legend>
    <table class="tc-relations table table-hover">
        <thead>
            <tr>
                <th class="user"></th>
                <th class="name"></th>
            </tr>
        </thead>
        <tbody>
            {% for relation in relations %}            
            <tr>
                <td class="user">
                    <img class="img-circle" src="{{asset("img/thumbnails/user.png")}}" />
                </td>
                <td class="name">
                    <a href="{{path('client_relation_orders',{'idRelation': relation.id})}}">
                        {{relation.vendor.getFullName() | default(relation.vendor)}}    
                    </a>
                </td>
            </tr>    
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}