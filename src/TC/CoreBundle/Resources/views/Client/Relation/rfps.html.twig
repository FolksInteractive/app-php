{% extends 'TCCoreBundle:Client:skeleton.html.twig' %}

{% block body_class %} {{parent()}} relation-rfps  {% endblock %}

{% use "TCCoreBundle:Client:Relation/menu.html.twig" %}

{% block toolbar %}
    <div class="tc-breadcrumb pull-left">
        {% set menu = knp_menu_get('TCCoreBundle:ClientMenuBuilder:rfpsMenu',[],{"relation": relation}) %}
        {{ knp_menu_render(menu, {'template': 'TCCoreBundle::breadcrumbs.html.twig'}) }}
    </div>

    <div class="tc-controls pull-right">
        <a href="{{path('client_rfp_new', {'idRelation':relation.id})}}" 
           class="btn-primary btn-lg">
            <i class="icon-new-proposals-light-small"></i>
            New Request for Proposal
        </a>
    </div>

{% endblock %}

{% block sheet %}

<div class="tc-rfps-section">      
    <table class="tc-rfps table">
        <thead>
            <tr>
                <th class="request"></th>
                <th class="created_at"></th>
            </tr>
        </thead>
        <tbody>
            {% for rfp in relation.getRFPs() %}
                <tr>
                <td class="request">
                    <a href="{{path("client_rfp_show",{'idRFP':rfp.id,'idRelation':relation.id})}}">
                        {{rfp.heading|default('rfp')}}
                    </a>
                </td>
                <td class="created_at">
                    <a href="{{path("client_rfp_discuss",{'idRFP':rfp.id,'idRelation':relation.id})}}}}" 
                       class="badge badge-talk-bubble">
                        {{rfp.created_at|date('YY-MM-DD')}}
                    </a>
                </td>
                </tr>    
            {% endfor %}
        </tbody>
    </table>
</div> 
{% endblock %}
