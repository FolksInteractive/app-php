{% block menu %}
<div class="tc-return-section">
    <ul class="tc-menu nav">
        <li>
            <a href="{{path('client_dashboard')}}">
                <i class="icon-arrow-left icon-white"></i>
                <span class="dashboard">Back to dashboard </span>
            </a>
        </li>
    </ul>
</div>

<div class="tc-contact-section">
    <div class="nav-header">You're doing business with:</div>
    <div class="contact">
        <div class="avatar"><img src="{{vich_uploader_asset(relation.vendor.user, 'avatar') | imagine_filter('120_thumb')}}" class="img-circle"></div>
        <div class="infos">
            <div class="name">{{relation.vendor.getFullName() | default(relation.vendor)}}</div>
            <div class="role">Client</div>
        </div>
    </div>
</div>

{% set relationMenu = knp_menu_get('TCCoreBundle:ClientMenuBuilder:relationMenu',[],{'relation':relation, 'user':app.user}) %}
<div class="tc-menu-section">
    <div class="nav-header">Manage Relationship</div>
    {{ knp_menu_render(relationMenu, {'currentClass':'active'}) }}
</div>
{% endblock%}
