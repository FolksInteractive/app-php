{% extends 'TCCoreBundle:Vendor:skeleton.html.twig' %}

{% block body_class -%}{{ parent() }} vendor-relations {% endblock %}

{% block toolbar %}
<div class="tc-breadcrumb pull-left">
</div>

<div class="tc-controls pull-right">
    <a href="{{path('vendor_relation_new')}}" class="btn-primary btn">
        <i class="icon-discussion icon-white"></i>
        Open a new relationship
    </a>
</div>
{% endblock %}

{% block sheet %}
<div class="tc-relations-section">
    <legend>
        Relationships
        <span class="badge">{{ relations|length }}</span>
    </legend>
    <table class="tc-relations table table-hover">
        <thead>
            <tr>
                <th class="user"></th>
                <th class="name"></th>
            </tr>
        </thead>
        <tbody>
            {% for relation in relations %}            
            <tr>
                <td class="user">
                    <img class="img-circle" src="{{vich_uploader_asset(relation.client.user, 'avatar') | imagine_filter('30_thumb')}}" />
                </td>
                <td class="name">
                     <a href="{{path('vendor_relation_orders',{'idRelation': relation.id})}}">                     
                        {{relation.client.getFullName() | default(relation.client)}}   
                     </a>
                </td>
            </tr>    
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}