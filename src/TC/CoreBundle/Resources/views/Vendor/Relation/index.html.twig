{% extends 'TCCoreBundle:Vendor:skeleton.html.twig' %}

{% block body_class -%}{{ parent() }} vendor-relations {% endblock %}

{% block toolbar %}
<div class="tc-breadcrumb pull-left">
    <ul class="breadcrumb">        
        <li class="active">    
            <a href="{{path('vendor_relation')}}">
                <i class="icon-relations-dark-large"></i> Service Providers
            </a>
        </li>    
    </ul>
</div>

<div class="tc-controls pull-right">
    <a href="{{path('vendor_relation_new')}}" class="btn-primary btn-lg">
        <span class="icon-add-user"></span>
        Add a Person
    </a>
</div>
{% endblock %}

{% block sheet %}
<div class="tc-relations-section">

    <legend>Active Business Relationships <span>({{relations|length}})</span></legend>
    
    <div class="tc-relations-boxes">
    {% for relation in relations %}
            
        <div class="col-sm-6 col-md-4  col-lg-3">
            <div class="thumbnail">
                <img class="img-rounded" src="{{vich_uploader_asset(relation.client.user, 'avatar') | imagine_filter('140_thumb')}}" />
                <div class="caption">
                    
                    {% if relation.client.getFirstName() and relation.client.getLastName() %}
                        <h3>{{relation.client.getFirstName()}} <br /> 
                            <small>{{relation.client.getLastName()}}</small>
                        </h3>
                    {% else %}
                        </h4>{{relation.client.getEmail()}}</h4>
                    {% endif %}
                    
                    <div class="toolbar">
                        <a class="btn btn-primary" role="button"
                           href="{{path('vendor_relation_orders',{'idRelation': relation.id})}}">
                            <span class="icon-check-small"></span>
                            View Activities
                        </a>
                    </div>
                </div>
            </div>
        </div>
                    
    {% endfor %}
    </div>

    {# Not for BETA
    <legend>Inactive Business Relationships <span>(0)</span></legend>
    #}
</div>
{% endblock %}