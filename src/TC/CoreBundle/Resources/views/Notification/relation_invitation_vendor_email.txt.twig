{% autoescape false %}

<div style="color: #112834; padding-bottom: 20px; margin-bottom: 30px; border-bottom: 1px solid #dededf;">
    <img src="{{app.request.uriForPath(avatar(relation.client.user) | imagine_filter('140_thumb'))}}" style="margin-bottom: 20px; border-radius: 50%;" /><br /> 
    <span style=" font-size: 24px; font-weight:bold;">{{relation.client.getFullName()}}</span> <p style="color: #2cb34f;">would be interested to <b>work with you</b> using TimeCrumbs.</p>
</div>

