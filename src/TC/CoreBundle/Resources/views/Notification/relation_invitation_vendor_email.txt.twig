{% block subject %}
{% autoescape false %}
New Work Opportunity! {{relation.client.getFullName()}} has just invited you to partner up!
{% endautoescape %}
{% endblock %}

{% block title %}
{% autoescape false %}
<img src="{{ app.request.uriForPath('/img/email/title-invitation.jpg')}}" border="0" />
{% endautoescape %}
