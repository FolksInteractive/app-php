{% extends "::skeleton_email.html.twig" %}

{% block subject %}
{% autoescape false %}
{{relation.client.getFullName()}} has cancelled a request for proposal...
{% endautoescape %}
{% endblock %}

{% block title %}
{% autoescape false %}
<img src="{{ app.request.uriForPath('/img/email/title-rfp-cancel.jpg')}}" border="0" />
{% endautoescape %}
{% endblock %}

{% block sub_title %}{% autoescape false %}
RFP Cancelled
{% endautoescape %}{% endblock %}

{% block body_html %}

<div style="color: #112834; padding-bottom: 20px; margin-bottom: 30px; border-bottom: 1px dashed #dededf;">
    <img src="{{app.request.uriForPath(vich_uploader_asset(relation.client.user, 'avatar') | imagine_filter('140_thumb'))}}" style="margin-bottom: 20px; border-radius: 50%;" /><br /> 
    <span style=" font-size: 24px; font-weight:bold;">{{relation.client.getFullName()}}</span> <p style="color: #990000;">has just <b>cancelled a request for proposal</b>.</p>
</div>

{% if cancellation is not empty %}
    Your client's message :<br /><br />
    {{ cancellation.why }} <br /><br />
    {{ cancellation.other }} 
{% endif %}
    
{% endblock %}

{% block button1 %}
View RFP
{% endblock %}

{% block button1_url %}{% autoescape false %}
{{url('vendor_rfp_show', {'idRelation':relation.id, 'idRFP':rfp.id})}}
{% endautoescape %}{% endblock %}
