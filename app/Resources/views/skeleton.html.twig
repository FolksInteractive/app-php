{% extends "::base.html.twig" %}

{% block head_css %}

<link rel="stylesheet" href="{{asset('css/app.css')}}" />

{% endblock %}

{% block body %}

{# Feedback include. It is in fact a bootstrap modal mappedBy #feedbackModal button #}
{{ render(controller('TCFeedbackBundle:Feedback:new', { 'uri': app.request.uri })) }}

<div class="tc-menu-panel">

    <div class="tc-menu-heading">

        <div class="account">
            
            <div class="alerts"><a href="#"><img src="/img/icons/alerts.png" /><span class="badge label-success">2</span></a></div>

            <div class="dropdown">

                <a data-toggle="dropdown" class="profile-links client" href="#">
                    <div class="profile">
                        <img src="{{vich_uploader_asset(app.user, 'avatar') | imagine_filter('30_thumb')}}">
                        <div class="name">{{app.user.fullName}}!</div>
                        <div class="caret glyphicon-white"></div>
                    </div>
                </a>

                <ul class="dropdown-menu">
                    <!-- dropdown menu links -->
            {% block topbar_profile_dropdown %}{% endblock %}
                    <li><a href="{{path('fos_user_profile_edit')}}">Edit profile</a></li>
                    <li><a class="btn btn-link" data-toggle="modal" data-target="#feedbackModal">Leave your impressions</a></li>
                    <li><a href="{{path('fos_user_security_logout')}}">Sign out</a></li>
                </ul>
            </div>

        </div>
        
        <div class="tc-logo">
            <a href="{{path("root")}}"><img src="/img/logo-timecrumbs-small.png" /></a>
        </div>

    </div>

    {% block menu %}{% endblock %}



</div>

<div class="tc-main-panel" {% block main_attrs %}{% endblock %}>
    {% block main_before %}{% endblock %}

    {% block main %}
        <div class="tc-toolbar">
            <div class="bg-color"></div>
        {% block toolbar %}{% endblock %}        
        </div>

        <div class="tc-sheet">
        {% block sheet %}{% endblock %}
            </div>
    {% endblock %}

    {% block main_after %}{% endblock %}
        </div>

{% endblock %}

{% block bottom_js %}
<script src="{{asset("js/feedback/feedback-module.js")}}" type="text/javascript"></script>


{% endblock %}    